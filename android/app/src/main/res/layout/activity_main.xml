<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Daryl"
        android:textSize="@dimen/abc_text_size_large_material"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="8dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_picture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/daryl_buzz"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:id="@+id/streak_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/workout_logo"
            android:src="@drawable/barbell"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/streak_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/streak_label"
            android:textSize="@dimen/abc_text_size_medium_material"/>

        <EditText
            android:id="@+id/streak_value"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@null"
            android:textSize="@dimen/abc_text_size_medium_material"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cash_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cash_logo"
            android:src="@drawable/dollar"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/cash_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/cash_label"
            android:textSize="@dimen/abc_text_size_medium_material"/>

        <EditText
            android:id="@+id/cash_value"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@null"
            android:textSize="@dimen/abc_text_size_medium_material"/>
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart1"
        android:layout_width="326dp"
        android:layout_height="243dp"/>

    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/cheapestButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add exercise"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            custom:pb_colorNormal="#FF03A9F4"/>

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/closestButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add food"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            custom:pb_colorNormal="#FF03A9F4"/>
    </LinearLayout>

</RelativeLayout>
