<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.treak.treak.MetricsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


    <LinearLayout
        android:id="@+id/streak_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/workout_logo"
            android:src="@drawable/trophy"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metrics"
            android:textSize="@dimen/abc_text_size_large_material"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="8dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/longest_streak_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/longest_streak_logo"
            android:src="@drawable/sportsmode"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/longest_streak_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:background="@null"
            android:textSize="@dimen/abc_text_size_medium_material"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/average_streak_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/average_streak_logo"
            android:src="@drawable/average"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/average_streak_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:background="@null"
            android:textSize="@dimen/abc_text_size_medium_material"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/next_milestone_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/next_milestone_logo"
            android:src="@drawable/next"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/next_milestone_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:background="@null"
            android:textSize="@dimen/abc_text_size_medium_material"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/next_reward_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/next_reward_logo"
            android:src="@drawable/receivecash"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/next_reward_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:background="@null"
            android:textSize="@dimen/abc_text_size_medium_material"/>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
